<section aria-labelledby="contact"></section>
<h2 class="sr-only" id="contact">contact</h2>
<div
  class="px-4 lg:py-24 md:flex-none md:px-28 py-10 sm:justify-center flex items-center justify-center">
  <div class="w-full max-w-md md:max-w-sm md:px-0 mx-auto sm:px-4">
    <div class="flex flex-col">
      <div>
        <h2 class="text-3xl font-semibold leading-tight text-white">
          Have something to say?
        </h2>
        <p class="mt-2 text-sm text-zinc-400">
          I'll get back to you as soon as possible! Thanks for reaching out. :)
        </p>
      </div>
    </div>
    <form action="#">
      <input
        autocomplete="false"
        name="hidden"
        type="text"
        style="display:none;"
      />

      <input type="hidden" name="_redirect" value="#" />
      <div class="mt-4 space-y-6">
        <div class="">
          <label name="name" class="block mb-3 text-sm font-medium text-white">
            Name
          </label>
          <input
            type="text"
            placeholder="Your name"
            class="block w-full px-3 py-2 border border-transparent appearance-none text-blue-300 placeholder-white/50 bg-white/5 focus:border-blue-300 focus:bg-transparent focus:outline-none focus:ring-blue-300 sm:text-sm placeholder- -500"
          />
        </div>
        <div class="col-span-full">
          <label
            name="company"
            class="block mb-3 text-sm font-medium text-white">
            What are you reaching out about?
          </label>
          <input
            type="text"
            class="block w-full px-3 py-2 border border-transparent appearance-none text-blue-300 placeholder-white/50 bg-white/5 focus:border-blue-300 focus:bg-transparent focus:outline-none focus:ring-blue-300 sm:text-sm placeholder- -500"
            placeholder="Collab?"
          />
        </div>
        <div class="col-span-full">
          <label name="email" class="block mb-3 text-sm font-medium text-white">
            Your Email
          </label>
          <input
            type="email"
            autocomplete="off"
            placeholder="email@example.com"
            class="block w-full px-3 py-2 border border-transparent appearance-none text-blue-300 placeholder-white/50 bg-white/5 focus:border-blue-300 focus:bg-transparent focus:outline-none focus:ring-blue-300 sm:text-sm placeholder- -500"
          />
        </div>
        <div>
          <div>
            <label
              name="message"
              class="block mb-3 text-sm font-medium text-white"
              >Message</label
            >
            <div class="mt-1">
              <textarea
                rows="4"
                placeholder="Insert your message here!"
                class="block w-full px-3 py-2 border border-transparent appearance-none text-blue-300 placeholder-white/50 bg-white/5 focus:border-blue-300 focus:bg-transparent focus:outline-none focus:ring-blue-300 sm:text-sm placeholder- -500"
              ></textarea>
            </div>
          </div>
        </div>
        <div class="mt-6 w-full">
          <a
            class="hover:text-white flex justify-center text-center font-medium duration-2 focus:outline-none focus:shadow-none text-blue-300 border md:my-0 px-4 py-2 w-full"
            href="Login in"
            >Send message
          </a>
        </div>
      </div>
    </form>
  </div>
</div>
